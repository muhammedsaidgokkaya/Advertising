@using AdminTest.Models.Meta.AdvertisingAccount
@model List<AdvertisingAccountsResponse>

@{
    ViewData["Title"] = "Advertising";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Reklam Hesapları</h2>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Reklam Hesabı Adı</th>
                <th>Kampanyalar</th>
                <th>Reklam Setleri</th>
                <th>Reklamlar</th>
                <th>Hesap İstatistikleri</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                foreach (var advertising in item.Data)
                {
                    <tr>
                        <td>@advertising.Id</td>
                        <td>@advertising.Name</td>
                        <td><a href="/Home/Campaigns?accountId=@advertising.Id">Git</a></td>
                        <td><a href="/Home/AdSets?accountId=@advertising.Id">Git</a></td>
                        <td><a href="/Home/Ads?accountId=@advertising.Id">Git</a></td>
                        <td><a href="/Home/Report?accountId=@advertising.Id">Git</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
