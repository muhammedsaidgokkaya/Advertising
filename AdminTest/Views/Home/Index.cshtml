@using AdminTest.Models.Meta.Business
@model List<BusinessResponse>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <h2 class="mb-4">Hesaplar</h2>
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Hesap Adı</th>
          <th>Reklam Hesapları</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
            foreach (var business in item.Data)
            {
                <tr>
                    <td>@business.Id</td>
                    <td>@business.Name</td>
                    <td><a href="/Home/Advertising?businessId=@business.Id">Git</a></td>
                </tr>
            }
        }
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
